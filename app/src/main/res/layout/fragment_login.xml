<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="#fff"
    android:paddingLeft="@dimen/fragment_padding_left"
    android:paddingRight="@dimen/fragment_padding_right"
    android:paddingTop="@dimen/fragment_padding_top"
    android:padding="@dimen/fragment_padding_bottom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bocaFrontLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/login_logo"/>

            <ImageView
                android:id="@+id/bocaFrontLogo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/login_logo_1"/>

            <EditText
                android:id="@+id/form_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="#C5C5C5"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:hint="Email" />

            <EditText
                android:id="@+id/form_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:inputType="textPassword"
                android:background="#C5C5C5"
                android:minEms="8"
                android:maxEms="20"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:hint="Password" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="15dp"
                android:background="#57B5DB"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="LOGIN"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Forgot password?"
                android:textColor="@color/app_dark_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Don't have account?"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:background="@color/app_orange"
                android:textSize="18sp"
                android:textColor="#fff"
                android:text="SIGN UP"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
